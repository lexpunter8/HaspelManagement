<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllinqApp.CustomControls.IconTextLabel">

    <StackLayout Orientation="Horizontal">
        <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" WidthRequest="25" FontFamily="{StaticResource FontAwesomeSolid}" TextColor="White" FontSize="Subtitle" x:Name="iconLabel"/>
        
        <!--<BoxView Color="Red" HeightRequest="10" WidthRequest="1"/>-->
        <Label x:Name="text" VerticalTextAlignment="Center" TextColor="White"/>
    </StackLayout>
</ContentView>
